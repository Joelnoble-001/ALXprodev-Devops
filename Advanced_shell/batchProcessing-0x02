#!/bin/bash

# List of Pokémon to fetch
POKEMONS=("Bulbasaur" "Ivysaur" "Venusaur" "Charmander" "Charmeleon")

# Output directory
OUTPUT_DIR="pokemon_data"
mkdir -p "$OUTPUT_DIR"

# Loop through each Pokémon
for pokemon in "${POKEMONS[@]}"; do
    # Convert name to lowercase for file naming and API URL
    name_lower=$(echo "$pokemon" | tr '[:upper:]' '[:lower:]')
    api_url="https://pokeapi.co/api/v2/pokemon/$name_lower"

    echo "Fetching data for $name_lower..."

    # Make API request
    http_code=$(curl -s -w "%{http_code}" -o "$OUTPUT_DIR/$name_lower.json" "$api_url")
    
    if [ "$http_code" -eq 200 ]; then
        echo "Saved data to $OUTPUT_DIR/$name_lower.json ✅"
    else
        echo "$(date '+%Y-%m-%d %H:%M:%S') - Failed to fetch $name_lower (HTTP $http_code)" >> errors.txt
        echo "Failed to fetch $name_lower ❌"
        rm -f "$OUTPUT_DIR/$name_lower.json"
    fi

    # Delay to handle rate-limiting (1 second)
    sleep 1
done
