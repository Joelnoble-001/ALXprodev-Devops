#!/bin/bash

# API URL for Pikachu
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
DATA_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
response=$(curl -s -w "%{http_code}" -o "$DATA_FILE" "$API_URL")
http_code="${response: -3}"

# Check if the request was successful
if [ "$http_code" -ne 200 ]; then
    echo "$(date '+%Y-%m-%d %H:%M:%S') - Failed to fetch data. HTTP status code: $http_code" >> "$ERROR_FILE"
    # Remove the possibly incomplete data file
    rm -f "$DATA_FILE"
else
    echo "Data successfully saved to $DATA_FILE"
fi
