#!/bin/bash

# JSON file from Task 0
DATA_FILE="data.json"

# Extract values using jq
name=$(jq -r '.name' "$DATA_FILE")
height=$(jq -r '.height' "$DATA_FILE")
weight=$(jq -r '.weight' "$DATA_FILE")
type=$(jq -r '.types[0].type.name' "$DATA_FILE")  # First type

# Convert height (decimeters → meters) and weight (hectograms → kg)
formatted_height=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
formatted_weight=$(awk "BEGIN {printf \"%d\", $weight / 10}")

# Capitalize the first letter of type
type=$(echo "$type" | sed -E 's/(.)/\U\1/')

# Print in the expected format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
