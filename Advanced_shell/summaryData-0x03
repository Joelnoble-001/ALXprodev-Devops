#!/bin/bash

# Directory containing PokÃ©mon JSON files
DATA_DIR="pokemon_data"
CSV_FILE="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

# Variables to calculate averages
total_height=0
total_weight=0
count=0

# Loop through each JSON file
for file in "$DATA_DIR"/*.json; do
    # Extract name, height (decimeters), and weight (hectograms)
    name=$(jq -r '.name' "$file")
    height_dm=$(jq -r '.height' "$file")
    weight_hg=$(jq -r '.weight' "$file")

    # Convert to meters and kilograms
    height=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")
    weight=$(awk "BEGIN {printf \"%.1f\", $weight_hg / 10}")

    # Append to CSV
    echo "$name,$height,$weight" >> "$CSV_FILE"

    # Sum for averages
    total_height=$(awk "BEGIN {print $total_height + $height}")
    total_weight=$(awk "BEGIN {print $total_weight + $weight}")
    count=$((count + 1))
done

# Calculate averages
avg_height=$(awk "BEGIN {printf \"%.2f\", $total_height / $count}")
avg_weight=$(awk "BEGIN {printf \"%.2f\", $total_weight / $count}")

# Print summary
echo "CSV Report generated at: $CSV_FILE"
echo ""
cat "$CSV_FILE"
echo ""
echo "Average Height: $avg_height m"
echo "Average Weight: $avg_weight kg"
